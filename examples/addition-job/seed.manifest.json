{
  "seedVersion": "1.0.0",
  "job": {
    "name": "addition-job",
    "jobVersion": "0.0.1",
    "packageVersion": "1.0.0",
    "title": "Number Addition",
    "description": "Adds numbers together",
    "maintainer": {
      "name": "Emily Smith",
      "email": "esmith@example.com"
    },
    "timeout": 10,
    "resources": {
      "scalar": [
        { "name": "cpu", "value": 0.1 },
        { "name": "mem", "value": 16.0 },
        { "name": "disk", "value": 1.0, "inputMultiplier": 1.0 },
        { "name": "sharedMem", "value": 128 }
      ]
    },
    "interface": {
      "command": "${INPUT_FILE} ${OUTPUT_DIR}",
      "inputs": {
        "files": [
          {
            "name": "INPUT_FILE",
            "required": true,
            "mediaTypes": [
              "text/plain"
            ]
          }
        ]
      },
      "outputs": {
        "files": [
          {
            "name": "OUTPUT_FILE",
            "mediaType": "text/plain",
            "pattern": "*_output.txt",
            "multiple": true,
            "required": true
          }
        ],
        "json": [
          {
            "name": "x",
            "type": "integer"
          },
          {
            "name": "y",
            "type": "integer"
          },
          {
            "name": "z",
            "key": "total",
            "type": "integer"
          }
        ]
      },
      "mounts": [
        {
          "name": "MOUNT_BIN",
          "path": "/usr/bin/",
          "mode": "ro"
        },
        {
          "name": "MOUNT_TMP",
          "path": "/tmp/",
          "mode": "rw"
        }
      ],
      "settings": [
        {
          "name": "SETTING_ONE",
          "secret": false
        },
        {
          "name": "SETTING_TWO",
          "secret": true
        }
      ]
    },
    "errors": [
      {
        "code": 1,
        "title": "No Input Provided",
        "description": "No input files have been given. No data to add.",
        "category": "data"
      }
    ]
  }
}
